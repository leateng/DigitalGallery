<%= content_for :header do%>
  <%=form_tag clients_path, class: "navbar-form navbar-left", method: :get do %>
    <div class="checkbox">
      <label style="color: #999999;">
        <input type="checkbox" name="app" <%="checked" if params[:app].present?%>> APP
      </label>
    </div>

    <div class="form-group">
      <%= text_field_tag :search, params[:search], class: "form-control header-search-input", placeholder: "姓名，邮箱，电话" %>
    </div>

    <%= submit_tag "Search", class: "btn btn-default"%>
  <%end%>
<%end%>

<div class="row mt-20">
  <div class="col-lg-12 col-md-12 col-sm-12">
    <%= link_to  new_client_path, class: 'btn btn-success pull-right' do%>
      <span class="glyphicon glyphicon-plus-sign"></span> 添加新客户
    <%end%>
  </div>

  <div class="col-lg-12 col-md-12 col-sm-12">
    <table class="table table-condensed table-hover table-strip table-content-middle table-responsive">
      <thead>
      <tr>
        <th>#</th>
        <th>头像</th>
        <th>姓名</th>
        <th>邮箱</th>
        <th>电话</th>
        <th>照片数</th>
        <th>视频数</th>
        <th>操作</th>
      </tr>
      </thead>

      <tbody>
      <%@users.each_with_index do |user, index|%>
        <tr>
          <td><%= index + 1%></td>
          <td><%=link_to gravatar_for(user), user_path(user)%></td>
          <td><%=user.name%></td>
          <td><%=user.email%></td>
          <td><%=user.telephone%></td>
          <td><%=user.images.count%></td>
          <td><%=user.videos.count%></td>
          <td>
            <%= link_to user_attachments_path(user),
                        class: "btn btn-default btn-sm",
                        title: "上传",
                        data: {toggle: "tooltip", placement: "top"} do %>
              <span class="glyphicon glyphicon-upload"></span>
            <% end %>
          </td>
        </tr>
      <%end%>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>
