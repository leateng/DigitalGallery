<% if params[:build_client].present? %>
  <% provide(:title, '创建客户账号') %>
  <h1>创建客户账号</h1>
<% else %>
  <% provide(:title, '注册用户') %>
  <h1>注册</h1>
<% end %>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render partial: 'shared/error_messages', locals: {obj: @user} %>

      <div class="form-group">
      <%= f.label "用户名" %>
      <%= f.text_field :name, class: "form-control" %>
      </div>

      <% if params[:build_client].present? %>
      <div class="form-group">
        <%= f.label "用户订单号" %>
        <%= f.text_field :order_id, class: "form-control" %>
      </div>
      <% end %>

      <!--div class="form-group">
        <%#= f.label "手机号码" %>
        <%#= f.text_field :telephone, class: "form-control" %>
      </div>

      <div class="form-group">
        <%#= f.label "邮箱" %>
        <%#= f.text_field :email, class: "form-control" %>
      </div-->

      <% if params[:build_client].present? %>
        <%= hidden_field_tag "build_client", true%>
      <% else %>
        <div class="form-group">
          <%= f.label "密码" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label "确认密码" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>
      <%end%>

      <%= f.submit "提交", class: "btn btn-success form-control" %>
     <% end %>
  </div>
</div>