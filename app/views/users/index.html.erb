<%= content_for :header do%>
  <%=form_tag users_path, class: "navbar-form navbar-left", method: :get do %>
    <div class="form-group">
      <%= text_field_tag :search, params[:search], class: "form-control header-search-input", placeholder: "姓名，邮箱，电话" %>
    </div>
  <%end%>
<%end%>

<div class="row mt-20">
  <div class="col-md-12">
    <table class="table table-responsive table-condensed table-hover table-strip table-content-middle">
      <thead>
      <tr>
        <th>#</th>
        <th>头像</th>
        <th>姓名</th>
        <th>邮箱</th>
        <th>电话</th>
        <th>角色</th>
      </tr>
      </thead>

      <tbody>
      <%@users.each_with_index do |user, index|%>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to gravatar_for(user), user_path(user) %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.telephone %></td>
          <td><%= label_for user %></td>
        </tr>
      <%end%>
      </tbody>
    </table>
    <%= paginate @users %>
  </div>
</div>