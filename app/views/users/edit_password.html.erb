<% provide(:title, 'reset password') %>

<h1>重置 <%=@user.name%> 的密码</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag reset_password_user_path(@user), method: :post do %>
      <%= render partial: 'shared/error_messages', locals: {obj: @user} %>

      <div class="form-group">
        <%= label_tag "旧的密码" %>
        <%= password_field_tag :old_password, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "密码" %>
        <%= password_field_tag :password, nil, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= label_tag "重复密码" %>
        <%= password_field_tag :password_confirmation, nil, class: "form-control" %>
      </div>

      <%= submit_tag "更改信息", class: "btn btn-success form-control" %>
    <% end %>
  </div>
</div>